
<script>
    $(document).ready(function(){
        $('.btn-check-book').on('click',function(){
            var book_time_start = $(".book_time_start").val();
            var book_time_number = Number($('input[name="book_time_number"]:checked').val());
            var book_date = $('input[name="book_date"]:checked').val();
            var fullDay = $('input[name="book_date"]:checked').attr('title');
        var klvc = $('input[name="book_time_number"]:checked').closest("label").find("div").text();
        var book_notes = $('textarea[name="book_notes"]').val();
        var add_price = Number($('textarea[id="price_ot4"]').val());
            // options
        var book_price = Number($('input[name="book_price"]').val());

        book_options = [];
        var checkop = document.getElementsByName('options');
        for (let i = 0; i < checkop.length; i++) {
            if (checkop[i].checked == true ) {
                book_options.push(checkop[i].value);
            }

        }
            console.log(book_options);
            var _token = $('input[name="_token"]').val();
            console.log(book_time_start);
            console.log(book_time_number);
            console.log(book_date);
            console.log(klvc);
            console.log(book_notes);
            console.log(add_price);
            console.log(book_options);
            var result = '';
            // alert(action);
            //  alert(matp);
            //   alert(_token);


            $.ajax({
                url : "{{ route('home.giup-viec-ca-le.check') }}",
                method: 'POST',
                data:{
                    book_time_start:book_time_start,
                    book_time_number:book_time_number,
                    book_date:book_date,
                    book_options:book_options,
                    klvc:klvc,
                    book_notes:book_notes,
                    add_price:add_price,
                    fullDay:fullDay,
                    _token:_token
                },
                success:function(data){
                    $('#modal-check').html(data);
                   console.log(data);
                }
            });
        })
    });
</script>
